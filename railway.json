{
  "$schema": "https://railpack.dev/schema.json",
  "php": {
    "extensions": [
      "ctype",
      "curl",
      "dom",
      "fileinfo",
      "filter",
      "hash",
      "mbstring",
      "openssl",
      "pcre",
      "pdo_mysql",
      "pdo_pgsql",
      "session",
      "tokenizer",
      "xml",
      "gd",
      "zip"
    ]
  },
  "build": {
    "commands": [
      "install-php-extensions gd zip",
      "composer install --no-dev --prefer-dist --optimize-autoloader",
      "npm ci",
      "npm run build",
      "php artisan config:cache",
      "php artisan route:cache"
    ]
  }
}
