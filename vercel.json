{
  "version": 2,
  "buildCommand": "composer install --no-dev --prefer-dist --optimize-autoloader && php artisan config:cache && php artisan route:cache && npm ci && npm run build",
  "installCommand": "composer install --no-dev --prefer-dist --optimize-autoloader",
  "builds": [
    { "src": "api/index.php", "use": "@vercel/php" },
    { "src": "public/build/assets/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/build/assets/(.*)", "dest": "/public/build/assets/$1" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
