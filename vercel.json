{
  "version": 2,
  "outputDirectory": "dist",
  "installCommand": "composer install --no-dev --prefer-dist --optimize-autoloader",
  "buildCommand": "composer install --no-dev --prefer-dist --optimize-autoloader && npm ci && npm run build && rm -rf dist && mkdir -p dist && cp -R public/build/. dist/ && ls -al dist",
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php"
    },
    {
      "src": "public/build/assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/build/assets/(.*)",
      "dest": "/public/build/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}

